#: import NoTransition kivy.uix.screenmanager.NoTransition
 
<Widget>:
    font_name: '/System/Library/Fonts/ヒラギノ角ゴシック W3.ttc'
 
<Display>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8,1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
 
        ScreenManager:
            id: sm
            Camera_Position:
            Config_Device:
 
<Camera_Position>:
    name: 'camera_position'

    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 156/255,167/255,181/255,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.2   
            Label:
                text: "カメラの位置の設定"
                color: 0,0,0,1
                font_size: 48

        Image:
            id: camera_preview
            size: root.size

        BoxLayout:
            size_hint_y: 0.1
            padding: 10,10,10,10
            Label:
            Button:
                background_color: 0.48,1,0.63,1
                text: 'OK'
                font_size: 48
                on_press: 
                    root.nextStep()
                    root.play()
                    root.manager.get_screen("config_device").play()
                    root.manager.transition = NoTransition()
                    root.manager.current = 'config_device'


            Label:

<Camera_View>
    on_touch_down: root.on_image1_down(args[1])
    on_touch_up: root.on_image1_up(args[1])

<Selected_Kaden>
    BoxLayout:
        Label:
        Label:
            text: root.name
            color: 0,0,0,1
            font_size: 36
        Image:
            texture: root.image
            size: self.size
        Label:
        BoxLayout:
            padding: 50,10,50,10
            Button:
                text: '削除'
                background_color: 1,0,0,1
                on_press:
                    root.deleteKaden()

<Config_Device>:
    name: 'config_device'
    rv: rv
    BoxLayout:
        orientation: 'vertical'
        
        #上
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 156/255,167/255,181/255,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.2   
            Label:
                text: "操作家電の設定"
                color: 0,0,0,1
                font_size: 48
        
        #中
        BoxLayout:
            #中左
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.2 
                    padding: 20,50,20,20
                    BoxLayout:
                        padding: 100,20,100,20
                        size_hint_y: 0.1
                        Label:
                            text: '追加したい家電の名前を入力'
                            color: 0,0,0,1
                    BoxLayout:
                        padding: 100,10,100,10
                        TextInput:
                            id: kaden_name
                            text: ''
                            multiline: False

                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: 0.1
                        Label:
                            text: '追加したい家電の範囲を選択'
                            color: 0,0,0,1
                    BoxLayout:
                        canvas.before:
                            Color:
                                rgba: 1,0,0,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        Camera_View:
                            id: image1
                            size: self.size
                        

                BoxLayout:
                    size_hint_y: 0.2 
                    padding: 20,20,20,50
                    Button:
                        background_color: 0.48,1,0.63,1
                        text: '追加'
                        font_size: 48
                        on_press:
                            root.add()

            #中右
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: 0.1 
                RecycleView:
                    id: rv
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(56)
                    bar_width: dp(10)
                    viewclass: 'Selected_Kaden'
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: dp(4)



        #下
        BoxLayout:
            size_hint_y: 0.1
            padding: 10,10,10,10

            Button:
                background_color: 0.48,1,0.63,1
                text: '戻る'
                font_size: 48
                on_press:
                    root.backStep()
                    root.play()
                    root.manager.get_screen("camera_position").play()
                    root.manager.transition = NoTransition()
                    root.manager.current = 'camera_position'

            Label:

            Button:
                background_color: 0.48,1,0.63,1
                text: 'OK'
                font_size: 48
                on_press: 
                    root.nextStep()
                    root.manager.get_screen("camera_position").play()
                    root.manager.transition = NoTransition()
                    root.manager.current = 'camera_position'


